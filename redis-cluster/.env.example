# Redis Configuration
REDIS_IMAGE=redis:7.2-alpine
REDIS_CONTAINER_PREFIX=redis
REDIS_PASSWORD=change_this_password

# Ports for Redis nodes
REDIS_PORT_1=6379
REDIS_PORT_2=6380
REDIS_PORT_3=6381

# Cluster ports
REDIS_CLUSTER_PORT_1=16379
REDIS_CLUSTER_PORT_2=16380
REDIS_CLUSTER_PORT_3=16381

# Resource Limits
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=500M
REDIS_CPU_RESERVATION=0.25
REDIS_MEMORY_RESERVATION=250M

# Logging
REDIS_LOG_MAX_SIZE=10m
REDIS_LOG_MAX_FILE=3
